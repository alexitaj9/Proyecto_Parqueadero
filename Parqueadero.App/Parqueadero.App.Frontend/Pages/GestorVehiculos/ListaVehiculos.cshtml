@page
@model Parqueadero.App.Frontend.Pages.ListaVehiculosModel
@using Parqueadero.App.Dominio
@{
}

<nav class="navbar navbar-dark bg-primary shadow" id="navigationBar">
  <a class="navbar-brand" asp-page="/Home">Parqueadero</a>
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link text-white" asp-page="/Index">Cerrar sesión</a>
    </li>
  </ul>
</nav>

<a class="btn btn-primary" asp-page="./CrearVehiculo">Agregar Vehiculo</a>

<table class="table my-4">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Propietario</th>
      <th scope="col">Tipo Vehiculo</th>
      <th scope="col">Placa</th>
      <th scope="col">Marca</th>
      <th scope="col">Modelo</th>
      <th scope="col">Color</th>
      <th scope="col">Observaciones</th>
    </tr>
  </thead>
  @foreach (var vehiculo in Model.vehiculos)
  {
    <tr>
      <td>@vehiculo.propietario.nombre</td>
      <td>@vehiculo.tipoVehiculo.nombre</td>
      <td>@vehiculo.placa</td>
      <td>@vehiculo.marca</td>
      <td>@vehiculo.modelo</td>
      <td>@vehiculo.color</td>
      <td>@vehiculo.observaciones</td>
      <td>
        <a class="btn btn-block btn-primary table-btn" asp-page="./VerVehiculo" asp-route-id="@vehiculo.id">Editar</a>        
        <a class="btn btn-block btn-danger table-btn text-white" asp-page="./EliminarVehiculo"
        asp-route-id="@vehiculo.id">Eliminar</a>
      </td>
    </tr>
  }
</table>


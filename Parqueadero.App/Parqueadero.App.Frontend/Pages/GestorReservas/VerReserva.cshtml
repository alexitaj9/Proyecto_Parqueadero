@page
@model Parqueadero.App.Frontend.Pages.VerReservaModel
@using Parqueadero.App.Dominio
@{
}

<nav class="navbar navbar-dark bg-primary shadow" id="navigationBar">
    <a class="navbar-brand" asp-page="/Home">Parqueadero</a>
    <ul class="navbar-nav">
        <li class="nav-item">
        <a class="nav-link text-white" asp-page="/Index">Cerrar sesión</a>
        </li>
    </ul>
</nav>

<section>
    <div class="container bg-white my-4 p-4 shadow">
        <header class="text-center text-primary mb-4">
            <h1>Editar Reserva</h1>
        </header>
        <form method="POST" id="formUpdate">
            <div class="row">
                <div class="col form-group">
                    <input hidden asp-for="reserva.id"/>
                    <input class="form-control" asp-for="reserva.finReserva" type="date"  placeholder="finReserva">
                    <span class="text-danger" asp-validation-for="reserva.finReserva"></span>
                </div>   
                <div class="col form-group">
                    <input class="form-control" asp-for="reserva.fechaReserva" type="date" placeholder="fechaReserva">
                    <span class="text-danger" asp-validation-for="reserva.fechaReserva"></span>
                </div> 
            </div>
            <div class="row">
                <div class="col form-group">
                    <input class="form-control" asp-for="reserva.inicioReserva" type="text" placeholder="inicioReserva">
                    <span class="text-danger" asp-validation-for="reserva.inicioReserva"></span>
                </div>
                
            </div>
            <div class="row">
                <div class="col form-group">                    
                    <select class="form-control" asp-for="idPropietarios" asp-items="@Model.propietarios"></select>
                    <span class="text-danger" asp-validation-for="reserva.propietario"></span>
                </div>  
                
            </div>
            <div class="form-group">
                <label asp-for="idVehiculos" class="form-control">Vehiculo</label>
                <select class="form-control" asp-for="idVehiculos" asp-items="@Model.Vehiculo"></select>                
            </div>
            <div class="form-group">
                <label asp-for="idEspacioParqueadero" class="form-control">Espacio Parqueadero</label>
                <select class="form-control" asp-for="idEspacioParqueadero" asp-items="@Model.espacioParqueadero"></select>                
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Actualizar información</button>
            </div>
        </form>
    </div>
</section>

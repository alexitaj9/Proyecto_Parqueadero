@page
@model Parqueadero.App.Frontend.Pages.ListaReservasModel
@using Parqueadero.App.Dominio
@using Parqueadero.App.Persistencia
@{
}


<nav class="navbar navbar-dark bg-primary shadow" id="navigationBar">
  <a class="navbar-brand" asp-page="/Home">Parqueadero</a>
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link text-white" asp-page="/Index">Cerrar sesión</a>
    </li>
  </ul>
</nav>

<a class="btn btn-primary" asp-page="./CrearReserva">Agregar Reserva</a>

<table class="table my-4">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Propietario</th>
      <th scope="col">Vehiculo</th>
      <th scope="col">Espacio de Parqueadero</th>
      <th scope="col">Fecha reserva</th>
      <th scope="col">Fecha inicio reserva</th>
      <th scope="col">Fecha fin reserva</th>      
    </tr>
  </thead>
  @foreach (var reserva in Model.reservas)
  {
    <tr>
      <td>@reserva.propietario.nombre</td>
      <td>@reserva.vehiculo.placa</td>
      <td>@reserva.espacioParqueadero</td>
      <td>@reserva.fechaReserva</td>
      <td>@reserva.inicioReserva</td>
      <td>@reserva.finReserva</td>      
      <td>
        <a class="btn btn-block btn-primary table-btn" asp-page="./VerReserva" asp-route-id="@reserva.id">Editar</a>        
        <a class="btn btn-block btn-danger table-btn text-white" asp-page="./EliminarReserva"
        asp-route-id="@reserva.id">Eliminar</a>
      </td>
    </tr>
  }
</table>

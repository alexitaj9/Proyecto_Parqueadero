@page
@model Parqueadero.App.Frontend.Pages.ListaPropietariosModel
@{
}

<!--Navbar-->
<nav class="navbar navbar-dark fixed-top bg-primary shadow">
    <a class="navbar-brand" asp-page="/Home">Parqueadero</a>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" asp-page="/Index">Cerrar sesión</a>
        </li>
    </ul>
</nav>

<!-- Vertical navbar -->
<div class="vertical-nav bg-light p-4 position-fixed border-right border-primary">
    <button class="btn btn-block btn-primary" data-toggle="modal" data-target="#formRegistroPropietario">
        <i class="fas fa-user-plus mr-2"></i>Agregar Propietario
    </button>
</div>

<!-- Page content -->
<div class="page-content">
    <!--Button collapse-->
    <button class="sidebarCollapse btn btn-light btn-sm border-left-0 border-primary position-fixed">
        <i class="fas fa-chevron-right"></i>
    </button>

    <!--Aqui poner contenido-->
    <div class="container-fluid p-4 my-5">
        <div class="table-responsive">
            <table class="table table-striped bg-white my-4">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Identificación</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Fecha de nacimiento</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                @foreach (var propietario in Model.propietarios)
                {
                    <tr>
                        <td>@propietario.identificacion</td>
                        <td>@propietario.nombre</td>
                        <td>@propietario.apellidos</td>
                        <td>@propietario.fechaNacimiento</td>
                        <td>@propietario.direccion</td>
                        <td>@propietario.telefono</td>
                        <td>@propietario.correo</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" asp-page="./VerPropietario" asp-route-id="@propietario.id">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a class="btn btn-danger" asp-page="./EliminarPropietario" asp-route-id="@propietario.id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<!--Modal para registrar propietarios-->
<div class="modal modal-fade" id="formRegistroPropietario" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Registrar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="POST">
                <div class="modal-body">
                    <div class="row">
                        <div class="col form-group">
                            <label for="nuevoPropietario.nombre">Nombre</label>
                            <input class="form-control" asp-for="nuevoPropietario.nombre" type="text"
                                placeholder="Nombre">
                            <span class="text-danger" asp-validatio-for="nuevoPropietario.nombre"></span>
                        </div>
                        <div class="col form-group">
                            <label for="nuevoPropietario.apellidos">Apellidos</label>
                            <input class="form-control" asp-for="nuevoPropietario.apellidos" type="text"
                                placeholder="Apellidos">
                            <span class="text-danger" asp-validation-for="nuevoPropietario.apellidos"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col form-group">
                            <label for="nuevoPropietario.identificación">Identificación</label>
                            <input class="form-control" asp-for="nuevoPropietario.identificacion" type="text"
                                placeholder="Identificación">
                            <span class="text-danger" asp-validation-for="nuevoPropietario.identificacion"></span>
                        </div>
                        <div class="col form-group">
                            <label for="nuevoPropietario.fechaNacimiento">Fecha Nacimiento</label>
                            <input class="form-control" asp-for="nuevoPropietario.fechaNacimiento" type="date"
                                placeholder="Fecha de nacimiento">
                            <span class="text-danger" asp-validation-for="nuevoPropietario.fechaNacimiento"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col form-group">
                            <label for="nuevoPropietario.direccion">Dirección</label>
                            <input class="form-control" asp-for="nuevoPropietario.direccion" type="text"
                                placeholder="Dirección">
                            <span class="text-danger" asp-validation-for="nuevoPropietario.direccion"></span>
                        </div>
                        <div class="col form-group">
                            <label for="nuevoPropietario.telefono">Teléfono</label>
                            <input class="form-control" asp-for="nuevoPropietario.telefono" type="text"
                                placeholder="Teléfono">
                            <span class="text-danger" asp-validation-for="nuevoPropietario.telefono"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col form-group">
                            <label for="nuevoPropietario.correo">Correo Electrónico</label>
                            <input class="form-control" asp-for="nuevoPropietario.correo" type="email"
                                placeholder="Correo electrónico">
                            <span class="text-danger" asp-validation-for="nuevoPropietario.correo"></span>
                        </div>
                        <div class="col form-group">
                            <label for="nuevoPropietario.clave">Clave</label>
                            <input class="form-control" asp-for="nuevoPropietario.clave" type="password"
                                placeholder="Contraseña">
                            <span class="text-danger" asp-validation-for="nuevoPropietario.clave"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Registrar Usuario</button>
                </div>
            </form>
        </div>
    </div>
</div>
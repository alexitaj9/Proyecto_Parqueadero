@{
}

<nav class="navbar navbar-dark bg-primary shadow" id="navigationBar">
    <a class="navbar-brand" asp-page="/Home">Parqueadero</a>
    <ul class="navbar-nav">
        <li class="nav-item">
        <a class="nav-link text-white" asp-page="/Index">Cerrar sesión</a>
        </li>
    </ul>
</nav>


<a class="btn btn-primary" asp-page="./CrearPropietario">Agregar Propietario</a>

<table class="table my-4">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Identificación</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Fecha de nacimiento</th>
      <th scope="col">Dirección</th>
      <th scope="col">Telefono</th>
      <th scope="col">Correo</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  @foreach(var propietario in Model.propietarios) {
    <tr>
        <td>@propietario.identificacion</td>
        <td>@propietario.nombre</td>
        <td>@propietario.apellidos</td>
        <td>@propietario.fechaNacimiento</td>
        <td>@propietario.direccion</td>
        <td>@propietario.telefono</td>
        <td>@propietario.correo</td>
        <td>
          <a class="btn btn-block btn-primary table-btn" asp-page="./VerPropietario" asp-route-cedula="@propietario.identificacion">Editar</a>
          <a class="btn btn-block btn-danger table-btn text-white">Eliminar</a>
        </td>
    </tr>
  }
</table>

